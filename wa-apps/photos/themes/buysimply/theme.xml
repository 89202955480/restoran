<theme id="buysimply" system="0" vendor="873332" author="wm-site" app="photos" parent_theme_id="site:buysimply" version="2.2">
    <name locale="en_US">BuySimply</name>
    <name locale="ru_RU">Купить Просто</name>
	<description locale="ru_RU">Функциональный, привлекательный и продающий шаблон</description>
	<description locale="en_US">Functional, attractive and marketing template</description>
    <files>
    	<file path="index.html" custom="0" parent="1"/>
        <file path="buysimply.css" parent="1"/>		
        <file path="buysimply.photos.css" custom="0">
            <description locale="en_US">The main application file CSS styles "Photo"</description>
            <description locale="ru_RU">Стили CSS для приложения "Фото"</description>
        </file>
		<file path="buysimply.photos.js" custom="0">
            <description locale="en_US">JS scripts to "Photos"</description>
            <description locale="ru_RU">Скрипты JS для приложения "Фото"</description>
        </file>
        <file path="content.html" custom="0">
            <description locale="en_US">Main template output the content in "Photo"</description>
