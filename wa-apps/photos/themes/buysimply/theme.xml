            <description locale="ru_RU">Шаблон страницы отдельного изображения</description>
        </file>
        <file path="home.html" custom="0">
            <description locale="en_US">Template main gallery page</description>
            <description locale="ru_RU">ШАблон главной страницы приложения "фото"</description>
        </file>
        <file path="album.html" custom="0">
            <description locale="en_US">Template page album</description>
            <description locale="ru_RU">Шаблон страницы альбома</description>
        </file>
        <file path="search.html" custom="0">
            <description locale="en_US">Search page template (filter) images, such as a tag or author</description>
            <description locale="ru_RU">Шаблон страницы поиска (фильтрации) фотографий, например, по тегу или автору</description>
        </file>
        <file path="page.html" custom="0">
            <description locale="en_US">Template information page application "photo"</description>
			<description locale="ru_RU">Шаблон информационной страницы приложения "фото"</description>
        </file>
		<file path="view-mixed2.html" custom="0">
			<description locale="en_US">List of images blocks with images of different sizes(v.2)</description>
			<description locale="ru_RU">Список фотографий блоками с изображениями разного размера(v.2)</description>
	    </file>
		<file path="my.nav.html" custom="0">
            <description locale="en_US">Customer account navigation menu</description>
            <description locale="ru_RU">Меню навигации в личном кабинете покупателя</description>
        </file>
