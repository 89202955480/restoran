		<file path="buysimply.css" custom="0" parent="1"/>
        <file path="buysimply.blog.css" custom="0">
            <description locale="en_US">The main application file CSS styles "Blog"</description>
            <description locale="ru_RU">Основной файл стилей CSS приложения «Блог»</description>
        </file>
        <file path="content.html" custom="0">
            <description locale="en_US">Main layout output the content in "Blog"</description>
