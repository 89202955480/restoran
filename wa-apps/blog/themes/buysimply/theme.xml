        </file>
        <file path="head.html" custom="0">
			<description locale="en_US">a &lt;head&gt; application "Blog"</description>
			<description locale="en_US">Элемент &lt;head&gt; приложения «Блог»</description>
        </file>
        <file path="stream.html" custom="0">
            <description locale="en_US">Template the list of entries</description>
            <description locale="ru_RU">Шаблон вывода списка записей</description>
        </file>
        <file path="stream_search.html" custom="0">
            <description locale="en_US">Search Result (filtering) records, such as a tag or author</description>
            <description locale="ru_RU">Результат поиска (фильтрации) записей, например, по тегу или автору</description>
        </file>
        <file path="stream_posts.html" custom="0">
            <description locale="en_US">Main list view blog posts</description>
            <description locale="ru_RU">Основной вид списка записей блога</description>
        </file>
        <file path="post.html" custom="0">
            <description locale="en_US">One page template blog entry</description>
            <description locale="ru_RU">Шаблон страницы одной записи блога</description>
        </file>
        <file path="page.html" custom="0">
            <description locale="en_US">Template information page application "blog"</description>
            <description locale="ru_RU">Шаблон информационной страницы приложения "блог"</description>
        </file>
        <file path="comments.html" custom="0">
            <description locale="en_US">List template comments to blog posts</description>
            <description locale="ru_RU">Шаблон списка комментариев к записи блога</description>
        </file>
        <file path="comment.html" custom="0">
            <description locale="en_US">Withdrawal from the list of comments
			</description>
